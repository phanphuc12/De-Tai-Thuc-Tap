<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name = 'hr_settings']" position="after">
                    <page name="Family" string = "Family">
                        <field name="family_lines">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="day_of_birth"/>
                                <field name="nationality"/>
                                <field name="ethnic_group"/>
                                <field name="permanent_address"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="name"/>
                                    <field name="day_of_birth"/>
                                    <field name="nationality"/>
                                    <field name="ethnic_group"/>
                                    <field name="permanent_address"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="action_menu" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add New Employee!!!
                </p>
            </field>
        </record>

        <record id="action_hr_employee" model="ir.actions.act_window">
            <field name="name">employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr.view_employee_form"/>
        </record>

    </data>
</odoo>