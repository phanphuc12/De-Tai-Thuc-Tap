<odoo>

    <record id="assignment_graph_pie" model="ir.ui.view">
            <field name="name">Assignment.Graph</field>
            <field name="model">my.assignment</field>
            <field name="arch" type="xml">
                <graph string="Assignment Graph" type="pie" sample="1">
                    <field name="rating"/>
                    <field name="color" invisible="1"/>
                </graph>
            </field>
        </record>

    <record id="assignment_graph_bar" model="ir.ui.view">
            <field name="name">Assignment.Graph</field>
            <field name="model">my.assignment</field>
            <field name="arch" type="xml">
                <graph string="Assignment Graph" type="bar" sample="1">
                    <field name="state"/>
                </graph>
            </field>
        </record>

    <record id="my_assignment_board_pie" model="ir.actions.act_window">
        <field name="name">Assignment Pie</field>
        <field name="res_model">my.assignment</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="He-Thong-Giao-Viec.assignment_graph_pie"/>
    </record>

    <record id="my_assignment_board_bar" model="ir.actions.act_window">
        <field name="name">Assignment Bar</field>
        <field name="res_model">my.assignment</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="He-Thong-Giao-Viec.assignment_graph_bar"/>
    </record>

    <record id="dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2">
                    <column>
                        <action string="Rating" name="%(He-Thong-Giao-Viec.my_assignment_board_pie)d"/>
                    </column>
                    <column>
                        <action string="Assignment's Status" name="%(He-Thong-Giao-Viec.my_assignment_board_bar)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asm_board_board">
        <field name="name">ASM Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form,graph</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_form_view"/>
    </record>

</odoo>
