<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="assignment_form" model="ir.ui.view">
            <field name="name">assignment form</field>
            <field name="model">assignment.s</field>
            <field name="arch" type="xml">
                <form string="Assignments">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name_seq" readonly="1"/>
                            </h1>
                        </div>
                        <group name="inf">
                            <group>
                                <field name="department"/>
                                <field name="employee"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="deadline"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="assignment_view" model="ir.ui.view">
            <field name="name">assignment_view</field>
            <field name="model">assignment.s</field>
            <field name="arch" type="xml">
                <tree string="tree_assignment" default_order="create_date desc">
                    <field name="name_seq"/>
                    <field name="employee"/>
                    <field name="deadline"/>
                </tree>
            </field>
        </record>

        <record id="action_assignment_s" model="ir.actions.act_window">
            <field name="name">Assignment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">assignment.s</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Your New Assignment!
                </p>
            </field>
        </record>

    </data>
</odoo>