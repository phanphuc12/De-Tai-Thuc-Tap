<?xml version="1.0" encoding ="utf-8"?>
<odoo>
    <record id="send_assignment_form" model="ir.ui.view">
        <field name="name">send.assignment.wizard</field>
        <field name="model">send.assignment</field>
        <field name="arch" type="xml">
            <form string ="Send Assignment">
                <group>
                    <field name="description" invisible="1" />
                    <field name="name_seq" invisible="1" />
                    <field name="employee" invisible="1" />
                    <field name="deadline" invisible="1" />
                    <field name="department" invisible="1" />

                </group>
                <footer>
                    <button name="send_assignment" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="send_assignment_wizard" model="ir.actions.act_window">
        <field name="name">Send Assignment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">send.assignment</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="send_assignment_form"/>
        <field name="target">new</field>
    </record>

</odoo>
