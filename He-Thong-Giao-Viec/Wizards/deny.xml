<?xml version="1.0" encoding ="utf-8"?>
<odoo>
    <record id="decline_form" model="ir.ui.view">
        <field name="name">decline.wizard.form</field>
        <field name="model">decline.wizard</field>
        <field name="arch" type="xml">
            <form string="Decline Reason">
                <group>
                    <field name="reason_decline"/>
                </group>
                <footer>
                    <button name="action_decline" string="Send" type="object" class="btn-primary"
                            confirm="Decline this Assign?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="decline_wizard" model="ir.actions.act_window">
        <field name="name">Decline</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">decline.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="decline_form"/>
        <field name="target">new</field>
    </record>

</odoo>
